<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Приветствие пользователя</title>
</head>
<body>
    <p id="greeting"></p>

  <script>
      
      // Запрашиваем имя пользователя
 const input = prompt("Введите ваше имя:");

        // Проверяем, что имя введено
  if (input) {
            // Выводим приветствие в alert
      alert("Привет, " + input + "!");

            // Отображаем приветствие в элементе <p>
   document.getElementById("greeting").innerText = "Привет, " + input + "!";
        } else {
          alert("Имя не введено.");
        }
    </script>
</body>
</html>
